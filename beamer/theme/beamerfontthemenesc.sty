\mode<presentation>

\RequirePackage{fontspec}
\newfontfamily{\yahei}{Microsoft YaHei}

\setbeamerfont{title}{size*={28}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{subtitle}{size*={20}{\baselineskip}, shape=\itshape, series=\bfseries, family=\rmfamily}

\setbeamerfont{conference}{size*={20}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{author}{size*={14}{\baselineskip}, shape=\itshape, series=\bfseries, family=\rmfamily}

\setbeamerfont{reporter}{size*={16}{\baselineskip}, shape=\itshape, series=\bfseries, family=\yahei}
\setbeamerfont{email}{size*={16}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{date}{size*={16}{\baselineskip}, series=\bfseries, family=\yahei}

\setbeamerfont{sec}{size*={24}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{subsec}{size*={20}{\baselineskip}, series=\bfseries, family=\yahei}

\setbeamerfont{headline}{size*={24}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{fontline}{size*={10}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{frametitle}{size*={24}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{contenttitle}{size*={28}{\baselineskip}, series=\bfseries, family=\yahei}

\setbeamerfont{itemize item}{series=\bfseries, family=\yahei}
\setbeamerfont{itemize subitem}{series=\bfseries, family=\yahei}
\setbeamerfont{itemize subsubitem}{size*={18}{\baselineskip}, series=\bfseries, family=\yahei}
\setbeamerfont{enumerate item}{series=\bfseries, family=\rmfamily}
\setbeamerfont{enumerate subitem}{series=\bfseries, family=\rmfamily}
\setbeamerfont{enumerate subsubitem}{series=\bfseries, family=\rmfamily}

\setbeamerfont{itemize/enumerate body}{size*={16}{\baselineskip}, family=\yahei}
\setbeamerfont{itemize/enumerate subbody}{size*={16}{\baselineskip}, family=\yahei}
\setbeamerfont{itemize/enumerate subsubbody}{size*={14}{\baselineskip}, family=\yahei}

\setbeamerfont{description item}{size*={16}{\baselineskip}, series=\bfseries, family=\yahei}

\setbeamerfont{block title}{size*={20}{\baselineskip}, family=\yahei}
\setbeamerfont{block body}{size*={18}{\baselineskip}}
\setbeamerfont{block title alerted}{size*={20}{\baselineskip}, family=\yahei}
\setbeamerfont{block body alerted}{size*={18}{\baselineskip}}
\setbeamerfont{block title example}{size*={20}{\baselineskip}, family=\yahei}
\setbeamerfont{block body example}{size*={18}{\baselineskip}}

\setbeamerfont{bibliography item}{size=\tiny, family=\rmfamily}
\setbeamerfont{bibliography entry author}{size=\tiny, family=\rmfamily}
\setbeamerfont{bibliography entry title}{size=\tiny, family=\rmfamily}
\setbeamerfont{bibliography entry journal}{size=\tiny, family=\rmfamily}
\setbeamerfont{bibliography entry note}{size=\tiny, family=\rmfamily}
